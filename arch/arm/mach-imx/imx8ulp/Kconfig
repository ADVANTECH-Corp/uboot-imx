if ARCH_IMX8ULP

config AHAB_BOOT
	bool "Support i.MX8ULP AHAB features"
	help
	  This option enables the support for AHAB secure boot.

config IMX8ULP
	bool

config SYS_SOC
	default "imx8ulp"

config IMX8ULP_ND_MODE
	bool "i.MX8ULP Low Driver Mode"

choice
	prompt "i.MX8ULP board select"
	optional

config TARGET_IMX8ULP_EVK
	bool "imx8ulp_evk"
	select IMX8ULP
	select SUPPORT_SPL
	select IMX8ULP_DRAM
	select FSL_CAAM
	select FSL_BLOB
	select ARCH_MISC_INIT
	select SPL_CRYPTO if SPL

config TARGET_IMX8ULP_9X9_EVK
	bool "imx8ulp_9x9_evk"
	select IMX8ULP
	select SUPPORT_SPL
	select IMX8ULP_DRAM
	select FSL_CAAM
	select FSL_BLOB
	select MISC
	select ARCH_MISC_INIT
	select SPL_CRYPTO_SUPPORT if SPL

config TARGET_IMX8ULP_WATCH
	bool "imx8ulp_watch"
	select IMX8ULP
	select SUPPORT_SPL
	select IMX8ULP_DRAM
	select FSL_CAAM
	select FSL_BLOB
	select ARCH_MISC_INIT
	select SPL_CRYPTO if SPL

config TARGET_IMX8ULP_ROM2620A1_2G
	bool "Support i.MX8ULP ROM2620A1 2G"
	select IMX8ULP
	select SUPPORT_SPL
	select IMX8ULP_DRAM
	select FSL_CAAM
	select FSL_BLOB
	select ARCH_MISC_INIT
	select SPL_CRYPTO if SPL

config TARGET_IMX8ULP_ROM2620A1_1G
        bool "Support i.MX8ULP ROM2620A1 1G"
        select IMX8ULP
        select SUPPORT_SPL
        select IMX8ULP_DRAM
        select FSL_CAAM
        select FSL_BLOB
        select ARCH_MISC_INIT
        select SPL_CRYPTO if SPL

endchoice

source "board/advantech/imx8ulp_rom2620a1/Kconfig"
source "board/freescale/imx8ulp_evk/Kconfig"
source "board/freescale/imx8ulp_watch/Kconfig"

endif
